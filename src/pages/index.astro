---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Anim from "../components/BgCanvasAnim.astro";

import Card from "../components/Card.astro";
import ScCard from "../components/ScrollCard.astro";
import Contact from "../components/contact.astro";
import SvgAnim from "../components/SvgPathAnim.astro";
import Type from "../components/Typewriter.astro";
import Tech from "../components/TechMarquee.astro";
import ContentList from "../components/ContentList.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main class="relative">
      <Header />
      <section id="anim" class="sticky top-22 h-screen bg-gray-900 p-10">
        <h1 class="text-9xl font-bold text-white">AR_04</h1>

        <div class="flex">
          <p class="text-4xl text-white">
            Hi there, I am intersted in&nbsp
            <Type words={'["Music", "Games", "Anime"]'} />
          </p>
        </div>
      </section>

      <Anim anim="/portfolio_site/vanta.bird.min.js" />

      <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-8xl font-bold text-black">P R 0 J E C T S :</h1>
        <h1 class="text-8xl font-bold text-black">S 0 M E T H I N G_H E R E</h1>
        <div
          class="overflow-x-auto
            snap-x snap-mandatory
            [&>ul]:flex
            [&>ul]:space-x-6
            [&>ul>li]:min-w-[33.33%]
            [&>ul>li]:flex-shrink-0
            [&>ul]:list-none
            [&>ul]:p-0 [&>ul]:m-0"
        >
          <ContentList content="projects" limit="10" />
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-gray-200 p-10">
        <h1 class="text-8xl font-bold text-black">T E C H S_I_U S E D :</h1>
        <div class="p-5">
          <Tech />
          <Tech reverse={true} />
          <Tech />
          <Tech reverse={true} />
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-8xl font-bold text-black">B L 0 G S :</h1>
        <h1 class="text-8xl font-bold">S 0 M E T H I N G_H E R E</h1>
        <div
          class="overflow-x-auto
            snap-x snap-mandatory
            [&>ul]:flex
            [&>ul]:space-x-6
            [&>ul>li]:min-w-[33.33%]
            [&>ul>li]:flex-shrink-0
            [&>ul]:list-none
            [&>ul]:p-0 [&>ul]:m-0"
        >
          <ContentList content="blog" limit="5" />
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-gray-200 p-10">
        <h1 class="text-8xl font-bold text-black">T H 0 U G H T S:</h1>
        <h2 class="text-8xl font-bold text-black">
          "Uncertainty is an uncomfortable position. But certainty is an absurd
          one."
        </h2>
      </section>

      <!-- <SvgAnim /> -->
      <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-8xl font-bold text-black">C 0 N T A C T S :</h1>
        <Contact />
      </section>
    </main>
    <Footer />
  </body>
</html>
