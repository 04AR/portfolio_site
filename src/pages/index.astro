---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Anim from "../components/BgCanvasAnim.astro";

import Card from "../components/Card.astro";
import ScCard from "../components/ScrollCard.astro";
import Contact from "../components/contact.astro";
import SvgAnim from "../components/SvgPathAnim.astro";
import Type from "../components/Typewriter.astro";
import Tech from "../components/TechMarquee.astro";
import ContentList from "../components/ContentList.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hide-scrollbar {
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE & Edge */
      }
      .hide-scrollbar::-webkit-scrollbar {
        display: none; /* Chrome, Safari */
      }
    </style>
  </head>
  <body>
    <main class="relative">
      <Header />
      <section id="anim" class="sticky top-22 h-screen bg-gray-900 p-10">
        <h1 class="text-9xl font-bold text-white">AR_04</h1>

        <div class="flex">
          <p class="text-4xl text-white">
            Hi there, I am intersted in&nbsp
            <Type words={'["Music", "Games", "Anime"]'} />
          </p>
        </div>
      </section>

      <Anim anim="/portfolio_site/vanta.bird.min.js" />

      <section class="sticky top-22 h-screen bg-gray-200 p-10">
        <h1 class="text-7xl font-bold text-black">T E C H S_I_U S E D :</h1>
        <div
          class="absolute top-1/2 -translate-y-1/2 w-full left-0 right-0 p-5"
        >
          <div>
            <Tech />
            <Tech reverse={true} />
            <Tech />
            <Tech reverse={true} />
          </div>
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-7xl font-bold text-black">P R 0 J E C T S :</h1>
        <div class="absolute top-1/2 -translate-y-1/2 w-full left-0 right-0">
          <div
            class="overflow-x-auto hide-scrollbar
              [mask-image:linear-gradient(to_right,transparent,black_2%,black_98%,transparent)]
              [mask-repeat:no-repeat] [mask-size:100%_100%]
              [&>ul]:space-x-10
              [&>ul]:flex [&>ul>li]:flex-shrink-0 [&>ul>li]:w-1/2 [&>ul>li]:md:w-1/3"
          >
            <ContentList content="projects" limit="10" />
          </div>
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-gray-200 p-10">
        <h1 class="text-7xl font-bold text-black">B L 0 G S :</h1>
        <div class="absolute top-1/2 -translate-y-1/2 w-full left-0 right-0">
          <div
            class="overflow-x-auto hide-scrollbar
              [mask-image:linear-gradient(to_right,transparent,black_2%,black_98%,transparent)]
              [mask-repeat:no-repeat] [mask-size:100%_100%]
              [&>ul]:space-x-10
              [&>ul]:flex [&>ul>li]:flex-shrink-0 [&>ul>li]:w-1/2 [&>ul>li]:md:w-1/3"
          >
            <ContentList content="blog" limit="5" />
          </div>
        </div>
      </section>

      <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-7xl font-bold text-black">T H 0 U G H T S:</h1>
        <div
          class="absolute top-1/2 -translate-y-1/2 w-full left-0 right-0 flex p-10"
        >
          <h2 class="text-7xl font-bold text-black p-5">
            "Uncertainty is an uncomfortable position. But certainty is an
            absurd one."
          </h2>
          <div class="border-l border-black h-100"></div>
          <h2 class="text-7xl font-bold text-black p-5">
            "Uncertainty is an uncomfortable position. But certainty is an
            absurd one."
          </h2>
        </div>
      </section>

      <!-- <SvgAnim /> -->
      <!-- <section class="sticky top-22 h-screen bg-white p-10">
        <h1 class="text-7xl font-bold text-black">C 0 N T A C T S :</h1>
        <Contact />
      </section> -->
    </main>
    <Footer />
  </body>
</html>
